<div class='modal' id='userRegisterModal' style='display: none;'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='staticBackdropLabel'>Register User</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
          onclick='closeUserRegister()'
        ></button>
      </div>
      <div class='modal-body'>
        <form id='registerForm' method='POST' action='/user'>
          <div class='mb-3'>
            <label for='firstname' class='form-label'>First Name</label>
            <input
              required
              type='text'
              class='form-control'
              id='firstname'
              placeholder='first name'
              name='firstName'
            />
          </div>
          <div class='mb-3'>
            <label for='lastname' class='form-label'>Last Name</label>
            <input
              required
              type='text'
              class='form-control'
              id='lastname'
              placeholder='last anme'
              name='lastName'
            />
          </div>
          <div class='mb-3'>
            <label for='email' class='form-label'>Email</label>
            <input
              required
              type='email'
              class='form-control'
              id='email'
              placeholder='example@email.com'
              name='email'
            />
          </div>
          <div class='mb-3'>
            <label for='username' class='form-label'>Username</label>
            <input
              required
              type='text'
              class='form-control'
              id='username'
              placeholder='username'
              name='username'
            />
          </div>
          <div class='mb-3'>
            <label for='password' class='form-label'>Password</label>
            <input
              required
              type='password'
              class='form-control'
              id='password'
              name='password'
              placeholder='password'
            />
          </div>
          <button type='submit' class='btn btn-primary'>Register</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function openUserRegister(){
  document.getElementById('userRegisterModal').setAttribute('style','display:block');
  } 
  function closeUserRegister(){
  document.getElementById('userRegisterModal').setAttribute('style','display:none');
  }
</script>